{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>openalcoholics/renovate-config"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "ENV HELM_VERSION=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "helm/helm",
      "datasourceTemplate": "github-releases"
    }
  ]
}
