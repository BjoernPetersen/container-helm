{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>BlindfoldedSurgery/renovate-config",
    ":semanticCommits"
  ],
  "enabled": true,
  "packageRules": [
    {
      "groupName": "helm",
      "matchDepNames": [
        "helm/helm",
        "helm"
      ]
    },
    {
      "matchDepNames": [
        "helm/helm",
        "helm",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "commitMessagePrefix": "feat(deps)!:"
    },
    {
      "matchDepNames": [
        "helm/helm",
        "helm",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
