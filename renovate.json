{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>BlindfoldedSurgery/renovate-config",
    ":semanticCommits"
  ],
  "enabled": true,
  "packageRules": [
    {
      "matchDepNames": [
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "semanticCommitType": "feat!"
    },
    {
      "matchDepNames": [
        "helm"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
